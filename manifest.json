{
  "manifest_version": 2,
  "name": "Fight Me",
  "version": "0.01",

  "browser_action": {
    "default_icon": "images/logo.png",
    "default_popup": "popup.html",
    "default_title": "Click here!"
  },
  "content_scripts":[{
    "matches": [
      "<all_urls>"
    ],
    "all_frames": true,
    "css": ["styling/styles.css"],
    "js": ["extensions/jquery-3.2.1.min.js","content.js"]
    }],

  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ]
}
